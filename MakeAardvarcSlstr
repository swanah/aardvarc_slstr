SHELL = /bin/sh

LDFLAGS= -lnetcdf_c++4 -lnetcdf -lm
INCDIR = -I/cygdrive/P/C++/NR
CC     = g++
CFLAGS = -O3

SRC = $(wildcard *.cpp) $(wildcard tinyxml/*.cpp)
OBJ = $(SRC:.cpp=.o)



all: aardvarc

aardvarc: $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

%.o: %.cpp
	$(CC) $(CFLAGS) -o $@ -c $< $(INCDIR)

clean:
	rm $(OBJ) aardvarc
